@using Pustok.Models
@model Book

<div class="container">
    <h1>Create a Book</h1>
<form>
    <div class="form-group">
        <label asp-for="Name" >Name</label>
        <input class="form-control" placeholder="Enter Name">
    </div>
        <div class="form-group">
            <label asp-for="Name">Author</label>
            <input class="form-control" placeholder="Enter Author">
        </div>
        <div class="form-group">
            <label asp-for="Name">Price</label>
            <input class="form-control" placeholder="Enter Price">
        </div>
        <div class="form-group">
            <label asp-for="Name">Description</label>
            <input class="form-control" placeholder="Enter Description">
        </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>